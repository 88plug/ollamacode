{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter": {
      "npm": "@ai-sdk/openai-compatible",
      "api": "https://openrouter.ai/api/v1",
      "models": {}
    }
  },
  "experimental": {
    "hook": {
      "file_edited": {
        ".json": [
          {
            "command": ["bun", "run", "prettier", "$FILE"]
          }
        ]
      },
      "session_completed": [
        {
          "command": ["touch", "./node_modules/foo"]
        }
      ]
    }
  }
}
